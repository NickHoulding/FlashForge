{
  "name": "flashforge-monorepo",
  "version": "1.0.0",
  "description": "FlashForge - AI-powered flashcard application",
  "main": "index.js",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@flashforge/frontend",
    "dev:frontend": "npm run dev --workspace=@flashforge/frontend",
    "dev:backend": "cd ./apps/backend && uv run server.py",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "install:all": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "test": "npm run test --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickHoulding/FlashForge.git"
  },
  "keywords": ["flashcards", "ai", "react", "node", "typescript", "vite"],
  "author": "Nicholas Houlding",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NickHoulding/FlashForge/issues"
  },
  "homepage": "https://github.com/NickHoulding/FlashForge#readme",
  "devDependencies": {
    "@types/node": "^24.3.1"
  }
}
